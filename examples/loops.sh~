#!/bin/bash

# sh style for loop
for x in hello world
do
    echo $x
done

# bash style for loop
for ((i=0; i<10; i++))
do
    echo $i
done

# while loop
a=0
while [ $a -lt 10 ]
do
    echo $a
    a=`expr $a + 1`
done


# until loop
a=0
until [ ! $a -lt 10 ]
do
    echo $a
    a=`expr $a + 1`
done

# select loop

